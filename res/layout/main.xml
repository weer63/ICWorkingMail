<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="3"
              >
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnWorkingText"
            android:id="@+id/btnWorking"
            android:background="@color/btnWorkingColor"
            android:textColor="@android:color/black"
    />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnLeavingText"
            android:id="@+id/btnLeaving"
            android:background="@color/btnLeavingColor"
            android:textColor="@android:color/black"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2">
        <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="@string/btnStartBreakText"
                android:id="@+id/btnStartBreak"
                android:background="@color/btnStartBreakColor"
                android:textColor="@android:color/black"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="@string/btnEndBreakText"
                android:id="@+id/btnEndBreak"
                android:background="@color/btnEndBreakColor"
                android:textColor="@android:color/black"/>
    </LinearLayout>


</LinearLayout>


